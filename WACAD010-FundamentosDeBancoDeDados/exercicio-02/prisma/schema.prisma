generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Cliente {
  id              Int        @id @default(autoincrement())
  nome_completo   String
  cpf             String     @unique
  numeros_celular String
  email           String     @unique
  data_nascimento String
  enderecos       Endereco[]
}

model Endereco {
  id          Int       @id @default(autoincrement())
  cep         String
  pais        String
  estado      String
  cidade      String
  bairro      String
  rua         String
  numero      String
  ts_adiciona DateTime  @default(now())
  ts_exclui   DateTime?
  id_cliente  Int
  cliente     Cliente   @relation(fields: [id_cliente], references: [id])
  compras     Compra[]
}

model Categoria {
  id           Int            @id @default(autoincrement())
  nome         String
  descricao    String
  subcategoria Subcategoria[]
}

model Subcategoria {
  id           Int       @id @default(autoincrement())
  nome         String
  descricao    String
  id_categoria Int
  categoria    Categoria @relation(fields: [id_categoria], references: [id])
  produto      Produto[]
}

model Produto {
  id              Int               @id @default(autoincrement())
  modelo          String
  fabricante      String
  preco_base      Float
  estoque         String
  id_subcategoria Int
  Subcategoria    Subcategoria      @relation(fields: [id_subcategoria], references: [id])
  numero_de_Serie Numero_de_Serie[]
  detalhes_Compra Detalhes_Compra[]
}

model Numero_de_Serie {
  id              Int               @id @default(autoincrement())
  num_serie       String
  status          String
  ts_adiciona     DateTime          @default(now())
  ts_vende        DateTime?
  id_produto      Int
  produto         Produto           @relation(fields: [id_produto], references: [id])
  detalhes_Compra Detalhes_Compra[]
}

model Compra {
  id              Int               @id @default(autoincrement())
  data_hora       DateTime          @default(now())
  desconto        String
  forma_pagamento String
  total_compra    Float
  id_endereco     Int
  endereco        Endereco          @relation(fields: [id_endereco], references: [id])
  detalhes_Compra Detalhes_Compra[]
}

model Detalhes_Compra {
  id                 Int             @id @default(autoincrement())
  id_compra          Int
  id_produto         Int
  id_numero_de_serie Int
  compra             Compra          @relation(fields: [id_compra], references: [id])
  produto            Produto         @relation(fields: [id_produto], references: [id])
  numero_de_Serie    Numero_de_Serie @relation(fields: [id_numero_de_serie], references: [id])
}

model CategoriesOnPosts {
  post       Post     @relation(fields: [postId], references: [id])
  postId     Int
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int
  assignedAt DateTime @default(now())
  assignedBy String

  @@id([postId, categoryId])
}
